<?xml version="1.0" encoding="ISO-8859-1"?>

<splitpane orientation="vertical" divider="20">

<panel columns="3" gap="4" >
<button text="Cancela"  alignment="left" action="cancelar()" />
<button text="Remove"  alignment="center" action="remove(check_box_perecivel, tfcodigo, pvenda,nome, unidade, cbarras,dia, mes, ano)"/>
<button text="Adiciona"  alignment="right"  action="adiciona(check_box_perecivel, tfcodigo, pvenda,nome, unidade, cbarras,dia, mes, ano  )"/>

</panel>


<splitpane orientation="vertical" divider="140">

<splitpane orientation="horizontal" divider="100">

<panel text="Tipo de Produto" font="bold" columns="1" gap="4" border="true">
 
<checkbox name="check_box_perecivel" text="Perecível" group="group" action="setvalidade(panel1)"/>
<checkbox name="check_box_nperecivel" text="Não Perecível" group="group" selected="true" action="setfabrico(panel1)"/>

</panel>
<panel text="Produto" font="bold" columns="2" gap="4" border="true">

<label name="lcodigo" text="Código"/>
<textfield name="tfcodigo" alignment="right"/>

<label text="Preço de Venda" />
<textfield name="pvenda" alignment="right"/>

<label text="Nome"/>
<textfield name="nome" alignment="right"/>

<label text="Unidade"/>
<textfield name="unidade" alignment="right"/>

<label text="Código de Barras" />
<textfield name="cbarras" alignment="right"/>


</panel>
</splitpane>
<panel name="panel1" text="Data de Fabrico" font="bold" columns="6" gap="10" border="true">

<label text="dia"/>
<textfield name="dia" columns="2"/>

<label text="mês" />
<textfield name="mes" columns="2"/>

<label text="ano"/>
<textfield name="ano" columns="4"/>

</panel>
</splitpane>
</splitpane>